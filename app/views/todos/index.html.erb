<section id="todoapp" class="todoapp">
  <header class="header">
    <h1>todos</h1>
    <input class="new-todo" placeholder="What needs to be done?" autofocus data-behavior="create">
  </header>

  <%= content_tag :section, class: "main #{todos_css @todos}" do %>
    <input id="toggle-all" class="toggle-all" type="checkbox" data-behavior="toggle-all">
    <label for="toggle-all">Mark all as complete</label>
    <ul class="todo-list">
      <%= render partial: "todo", collection: @todos %>
    </ul>
  <% end %>

  <%= content_tag :section, class: "footer #{footer_css}" do %>
    <span class="todo-count">
      <strong><%= @uncompleted_count %></strong> <%= "item".pluralize(@uncompleted_count) %> left
    </span>

    <ul class="filters">
      <li><%= link_to "All",       "#", class: "filter #{filter_css :all, @filter}",         data: { behavior: "show-all" } %></li>
      <li><%= link_to "Active",    "#", class: "filter #{filter_css :uncompleted, @filter}", data: { behavior: "show-uncompleted" } %></li>
      <li><%= link_to "Completed", "#", class: "filter #{filter_css :completed, @filter}",   data: { behavior: "show-completed" } %></li>
    </ul>

    <%= button_tag "Clear completed", class: "clear-completed #{count_css}", data: { behavior: "destroy-completed" } %>
  <% end %>
</section>
